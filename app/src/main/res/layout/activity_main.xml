<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.katherine.lab_intents.MainActivity"
        android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_call"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:text="@string/custom_call"/>
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_location"
        android:layout_below="@+id/btn_call"
        android:drawableRight="@android:drawable/ic_dialog_map"
        android:text="@string/custom_Location"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_web"
            android:text="@string/custom_web"
            android:layout_below="@+id/btn_location"
            android:drawableLeft="@android:drawable/ic_dialog_alert"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_camera"
            android:text="Capturar Imagen"
            android:layout_below="@+id/btn_web"
            android:drawableRight="@android:drawable/ic_menu_camera"
            />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_prev"
            android:layout_below="@+id/btn_camera"/>
</RelativeLayout>